<h1>Join game</h1>

<% form_for(@user) do |f| %>

	<%
	#init
	game = Game.new
	games = Game.get_games
	%>
	<% games.each do |g| %>
		<%= f.radio_button :game_uuid, g[:uuid] %>
		map = Map.new
		m = map.get_map(g[:map_uuid])
		<%= f.label m[:name] %><br />
	<% end %>
	

  <%= f.error_messages %>
  <p>
    <%= f.submit 'Join' %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>