<h1>Join game</h1>

<% form_tag 'join' do -%>
<%= error_messages_for @games %>

	<% @games.each_pair do |k,v| %>
		<%= radio_button_tag :game_uuid, k %>
		<%= label_tag v[:game_name] + ", " + v[:map_name] + ", " + v[:num_players]+ "/" + v[:players]%><br />
	<% end %>

<%= submit_tag 'Join' %>

<% end %>

<%= link_to 'Back', games_path %>